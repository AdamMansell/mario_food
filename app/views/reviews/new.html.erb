<h1>Review for Product: <%= @product.name %> </h1>

<%= form_for [@product, @review] do |f| %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :content_body %>
  <%= f.text_area :content_body %>
  <%= f.label :rating %>
  <%= f.text_field :rating %>
  <%= f.submit %>
<% end %>

<br />
<br />

<% if @review.errors.any? %>
  <h3> Please fix the following errors, then try again! </h3> 
  <div class="ui warning message">  
    <ul class="list">
      <% @review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<p><%= link_to "Return to product", product_path(@product) %></p>